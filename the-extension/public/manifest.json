{
  "name": "clock it",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "The Clocks ticking dont get distracted",
  "permissions": ["tabs", "windows", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["floating-pill.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Clock it",
    "default_icon": {
      "16": "icons/lock-16.png",
      "32": "icons/lock-32.png",
      "48": "icons/lock-48.png",
      "64": "icons/lock-64.png",
      "128": "icons/lock-128.png"
    }
  },
  "icons": {
    "16": "icons/lock-16.png",
    "32": "icons/lock-32.png",
    "48": "icons/lock-48.png",
    "128": "icons/lock-128.png"
  }
}
